<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - SpaceWise</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
    }
  </style>
  <script>
    function toggleSecretCodeField() {
      const schoolSelection = document.getElementById("schoolSelection").value;
      const secretCodeField = document.getElementById("secretCodeField");
      secretCodeField.style.display = schoolSelection === "Yes" ? "block" : "none";
    }

    function validateForm(event) {
      const adminName = document.getElementById("adminName").value.trim();
      const email = document.getElementById("email").value.trim();
      const password = document.getElementById("password").value.trim();
      const schoolSelection = document.getElementById("schoolSelection").value;
      const secretCode = document.getElementById("secretCode").value.trim();
      
      let errorMessage = "";

      if (!adminName) {
        errorMessage += "Organization Name is required.\n";
      }
      if (!email) {
        errorMessage += "Email is required.\n";
      } else if (!/\S+@\S+\.\S+/.test(email)) {
        errorMessage += "Please enter a valid email address.\n";
      }
      if (!password) {
        errorMessage += "Password is required.\n";
      }
      if (schoolSelection === "Yes" && !secretCode) {
        errorMessage += "Secret Code is required for school members.\n";
      }

      if (errorMessage) {
        event.preventDefault();
        alert(errorMessage);
      }
    }
  </script>
</head>
<body class="bg-gray-100">
  <!-- Navbar -->
  <%- include('header') %>

  <!-- Main Content -->
  <main class="container mx-auto py-10 px-6">
    <h2 class="text-2xl font-semibold mb-6">Admin Registration</h2>
    <div class="bg-white p-6 shadow-md rounded-lg">
      <form id="admin-registration-form" action="/admin" method="get" onsubmit="validateForm(event)">
        <div class="mb-4">
          <label for="adminName" class="block text-sm font-medium text-gray-700">Organization Name</label>
          <input type="text" id="adminName" name="adminName" class="mt-1 block w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-md focus:outline-none focus:ring-purple-600 focus:border-purple-600">
        </div>
        <div class="mb-4">
          <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
          <input type="email" id="email" name="email" class="mt-1 block w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-md focus:outline-none focus:ring-purple-600 focus:border-purple-600">
        </div>
        <div class="mb-4">
          <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
          <input type="password" id="password" name="password" class="mt-1 block w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-md focus:outline-none focus:ring-purple-600 focus:border-purple-600">
        </div>
        <div class="mb-4">
          <label for="schoolSelection" class="block text-sm font-medium text-gray-700">Are you part of a school?</label>
          <select id="schoolSelection" name="schoolSelection" class="mt-1 block w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-md focus:outline-none focus:ring-purple-600 focus:border-purple-600" onchange="toggleSecretCodeField()">
            <option value="No">No</option>
            <option value="Yes">Yes</option>
          </select>
        </div>
        <div id="secretCodeField" class="mb-4" style="display: none;">
          <label for="secretCode" class="block text-sm font-medium text-gray-700">Secret Code</label>
          <input type="text" id="secretCode" name="secretCode" class="mt-1 block w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-md focus:outline-none focus:ring-purple-600 focus:border-purple-600">
        </div>
        <button type="submit" class="w-full px-4 py-2 text-sm text-white bg-purple-600 rounded hover:bg-purple-800">
          Register
        </button>
      </form>
    </div>
  </main>

  <!-- Footer -->
  <%- include('footer') %>
</body>
</html>
