<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - SpaceWise</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
    }
  </style>
</head>
<body class="bg-gray-100">
  <!-- Navbar -->
  <%- include('header') %>

  <!-- Main Content -->
  <main class="container mx-auto py-10 px-6">
    <h2 class="text-2xl font-semibold mb-6">Manage Reservations</h2>

    <div class="bg-white p-6 shadow-md rounded-lg">
      <h3 class="text-xl font-semibold mb-4">Active Reservations</h3>
      <table class="table-auto w-full text-left text-gray-600">
        <thead>
          <tr class="bg-gray-200">
            <th class="px-4 py-2">Reservation ID</th>
            <th class="px-4 py-2">User Name</th>
            <th class="px-4 py-2">Seat</th>
            <th class="px-4 py-2">Date</th>
            <th class="px-4 py-2">Actions</th>
          </tr>
        </thead>
        <tbody>
          <!-- Example active reservation -->
          <% activeReservations.forEach(reservation => { %>
            <tr class="border-b">
              <td class="px-4 py-2"><%= reservation.id %></td>
              <td class="px-4 py-2"><%= reservation.userName %></td>
              <td class="px-4 py-2"><%= reservation.seat %></td>
              <td class="px-4 py-2"><%= reservation.date %></td>
              <td class="px-4 py-2">
                <button class="px-3 py-1 text-sm bg-red-600 text-white rounded hover:bg-red-800">Cancel</button>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>

      <h3 class="text-xl font-semibold my-6">Past Reservations</h3>
      <table class="table-auto w-full text-left text-gray-600">
        <thead>
          <tr class="bg-gray-200">
            <th class="px-4 py-2">Reservation ID</th>
            <th class="px-4 py-2">User Name</th>
            <th class="px-4 py-2">Seat</th>
            <th class="px-4 py-2">Date</th>
            <th class="px-4 py-2">Status</th>
          </tr>
        </thead>
        <tbody>
          <!-- Example past reservation -->
          <% pastReservations.forEach(reservation => { %>
            <tr class="border-b">
              <td class="px-4 py-2"><%= reservation.id %></td>
              <td class="px-4 py-2"><%= reservation.userName %></td>
              <td class="px-4 py-2"><%= reservation.seat %></td>
              <td class="px-4 py-2"><%= reservation.date %></td>
              <td class="px-4 py-2"><%= reservation.status %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>

      <h3 class="text-xl font-semibold my-6">Override Reservations</h3>
      <form action="/overrideReservation" method="post">
        <div class="mb-4">
          <label for="reservationID" class="block text-sm font-medium text-gray-700">Reservation ID</label>
          <input type="text" id="reservationID" name="reservationID" class="mt-1 block w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-md focus:outline-none focus:ring-purple-600 focus:border-purple-600">
        </div>
        <button type="submit" class="w-full px-4 py-2 text-sm text-white bg-purple-600 rounded hover:bg-purple-800">
          Override Reservation
        </button>
      </form>
    </div>
  </main>

  <!-- Footer -->
  <%- include('footer') %>
</body>
</html>
