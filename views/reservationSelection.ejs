<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Reservations - SpaceWise</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
    }
  </style>
</head>
<body class="bg-gray-100">
  <!-- Navbar -->
  <header class="bg-white shadow-md">
    <div class="container mx-auto flex items-center justify-between py-4 px-6">
      <div class="flex items-center space-x-2">
        <a href="/home">
          <!-- Clickable Logo -->
          <span class="text-xl font-semibold">êåÇ SpaceWise</span>
        </a>
      </div>
      <div class="flex items-center space-x-4">
        <a href="/institutions">
          <button class="px-4 py-2 text-sm text-white bg-purple-600 rounded hover:bg-purple-800">
            Institutions
          </button>
        </a>
        <a href="/reservations">
          <button class="px-4 py-2 text-sm text-white bg-purple-600 rounded hover:bg-purple-800">
            Reservations
          </button>
        </a>
        <form id="logout" action="/logout" method="POST">
          <button class="px-4 py-2 text-sm text-white bg-black rounded hover:bg-gray-800">
            Logout
          </button>
        </form>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="container mx-auto py-10 px-6">
    <h2 class="text-2xl font-semibold mb-6">My Reservations</h2>
    
    <!-- Active Reservations -->
    <section class="mb-10">
      <h3 class="text-lg font-semibold mb-4">Active Reservations</h3>
      <!--Template This-->
      <ul class="space-y-4">
        <!-- <li class="bg-white shadow-md rounded-lg p-4 flex justify-between items-center">
          <div>
            <p class="font-semibold">Mudd Library | Seat 1</p>
            <p class="text-gray-600 text-sm">Date: 2025-01-25 | Time: 10:00 AM - 12:00 PM</p>
          </div>
          <div class="flex space-x-2">
            <form action="/reservations/13" method="post">
            <button class="px-4 py-2 text-sm text-white bg-green-600 rounded hover:bg-green-800">
              Confirm
            </button>
            </form>
            <form action="/reservations/14" method="post">
            <button class="px-4 py-2 text-sm text-white bg-red-600 rounded hover:bg-red-800">
              Cancel
            </button>
            </form>
          </div>
        </li> -->
        <li class="bg-white shadow-md rounded-lg p-4 flex justify-between items-center">
          <div>
            <p class="font-semibold">Library Study Area | Seat 2</p>
            <p class="text-gray-600 text-sm">Date: 2025-01-28 | Time: 2:00 PM - 4:00 PM</p>
          </div>
          <div class="flex space-x-2">
            <form action="/reservations/13" method="post">
              <button class="px-4 py-2 text-sm text-white bg-green-600 rounded hover:bg-green-800">
                Confirm
              </button>
              </form>
              <form action="/reservations/14" method="post">
              <button class="px-4 py-2 text-sm text-white bg-red-600 rounded hover:bg-red-800">
                Cancel
              </button>
              </form>
          </div>
        </li> 
        <% reservations.forEach(reservation => { %>
          <li class="bg-white shadow-md rounded-lg p-4 flex justify-between items-center">
            <div>
              <p class="font-semibold"><%= reservation.location %> | Seat <%= reservation.seat %></p>
              <p class="text-gray-600 text-sm">Date: <%= reservation.date %> | Time: <%= reservation.start_time %> - <%= reservation.end_time %></p>
            </div>
            <div class="flex space-x-2">
              <form action="/reservations/<%= reservation.id %>/confirm" method="post">
                <button class="px-4 py-2 text-sm text-white bg-green-600 rounded hover:bg-green-800">
                  Confirm
                </button>
              </form>
              <form action="/reservations/<%= reservation.id %>/cancel" method="post">
                <button class="px-4 py-2 text-sm text-white bg-red-600 rounded hover:bg-red-800">
                  Cancel
                </button>
              </form>
            </div>
          </li>
        <% }) %>        
      </ul>
    </section>

    <!-- Past Reservations -->
    <section>
      <h3 class="text-lg font-semibold mb-4">Past Reservations</h3>
      <!--Template This-->
      <ul class="space-y-4">
        <!-- <li class="bg-gray-200 shadow-md rounded-lg p-4">
          <p class="font-semibold">Conference Hall | Seat 10</p>
          <p class="text-gray-600 text-sm">Date: 2025-01-15 | Time: 1:00 PM - 3:00 PM</p>
        </li> -->
        <li class="bg-gray-200 shadow-md rounded-lg p-4">
          <p class="font-semibold">Room 102 | Seat 7</p>
          <p class="text-gray-600 text-sm">Date: 2025-01-12 | Time: 9:00 AM - 11:00 AM</p>
        </li>
        <% reservations.forEach(reservation => { %>
          <li class="bg-gray-200 shadow-md rounded-lg p-4">
            <p class="font-semibold"><%= reservation.location %> | Seat <%= reservation.seat %></p>
            <p class="text-gray-600 text-sm">Date: <%= reservation.date %> | Time: <%= reservation.start_time %> - <%= reservation.end_time %></p>
          </li>
        <% }) %>        
      </ul>
    </section>
  </main>
</body>
</html>
