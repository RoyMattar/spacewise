<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Institution Selection - SpaceWise</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <link rel="icon" type="image/png" href="/favicon.png">
  <style>
    body {
      font-family: 'Inter', sans-serif;
    }
  </style>
</head>
<body class="bg-gray-100">
  <!-- Student Navbar -->
  <%- include('partials/studentNavbar') %>

  <!-- Main Content -->
  <main class="container mx-auto py-10 px-6">
    <h2 class="text-2xl font-semibold mb-6">Select an Institution</h2>

    <% if (institutions.length > 0) { %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% institutions.forEach(institution => { %>
          <div class="bg-white shadow-md rounded-lg p-4 flex flex-col items-center">
            <!-- Institution Logo -->
            <% if (institution.logo_image) { %>
                <img src="data:image/png;base64,<%= institution.logo_image %>" 
                alt="<%= institution.institution_name %> Logo" 
                class="w-24 h-24 object-contain">
                <!-- <img src="<%= institution.logo_image %>" alt="Institution Image" class="w-full h-full object-contain"> -->
            <% } else { %>
              <img src="/emptyicon.png" id="logoUpload" alt="Institution Image" class="mb-3 w-24 h-24">
            <% } %>
            <h3 class="text-lg font-semibold mb-3"><%= institution.institution_name %></h3>
            <p class="text-gray-600 text-sm text-center mb-2"><%= institution.bio || 'No description available.' %></p>
            <p class="text-gray-600 text-sm text-center mb-2">Address: <%= institution.address || 'N/A' %></p>
            <p class="text-gray-600 text-sm text-center mb-2">Opening Hours: <%= institution.opening_hours || 'N/A' %></p>
            <a href="/institutions/<%= institution.institution_id %>/spaces">
              <button class="px-4 py-2 text-sm text-white mt-2 bg-purple-600 rounded hover:bg-purple-800">
                Select
              </button>
            </a>
          </div>
        <% }); %>
      </div> 
    <% } else { %>
      <p class="text-gray-600">No institutions available at the moment.</p>
    <% } %>
  </main>
</body>
</html>
