<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Institution Selection - SpaceWise</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
    }
  </style>
</head>
<body class="bg-gray-100">
  <!-- Navbar -->
  <header class="bg-white shadow-md">
    <div class="container mx-auto flex items-center justify-between py-4 px-6">
      <div class="flex items-center space-x-2">
        <a href="/home">
          <!-- Clickable Logo -->
          <span class="text-xl font-semibold">êåÇ SpaceWise</span>
        </a>
      </div>
      <div class="flex items-center space-x-4">
        <a href="/institutions">
          <button class="px-4 py-2 text-sm text-white bg-purple-600 rounded hover:bg-purple-800">
            Institutions
          </button>
        </a>
        <a href="/reservations">
          <button class="px-4 py-2 text-sm text-white bg-purple-600 rounded hover:bg-purple-800">
            Reservations
          </button>
        </a>
        <form id="logout" action="/logout" method="POST">
          <button class="px-4 py-2 text-sm text-white bg-black rounded hover:bg-gray-800">
            Logout
          </button>
        </form>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="container mx-auto py-10 px-6">
    <h2 class="text-2xl font-semibold mb-6">Select an Library</h2>

    <% if (institutions.length > 0) { %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% institutions.forEach(institution => { %>
          <div class="bg-white shadow-md rounded-lg p-4 flex flex-col items-center">
            <img src="https://via.placeholder.com/100" alt="Institution Image" class="mb-4 w-24 h-24">
            <h3 class="text-lg font-semibold"><%= institution.institution_name %></h3>
            <p class="text-gray-600 text-sm text-center mb-4"><%= institution.bio || 'No description available.' %></p>
            
            <a href="/institutions/<%= institution.institution_id %>/spaces">
              <button class="px-4 py-2 text-sm text-white bg-purple-600 rounded hover:bg-purple-800">
                Reserve
              </button>
            </a>
          </div>
        <% }); %>
      </div> 
    <% } else { %>
      <p class="text-gray-600">No institutions available at the moment.</p>
    <% } %>
  </main>
</body>
</html>
