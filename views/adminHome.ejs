<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin - SpaceWise</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
    }
  </style>
</head>
<body class="bg-gray-100">
  <!-- Pop-up notification for login success message -->
  <% if (successMessage) { %>
    <div id="popup-message" class="fixed top-5 left-1/2 transform -translate-x-1/2 bg-green-500 text-white py-2 px-4 rounded-lg shadow-lg opacity-0 transition-opacity duration-300 ease-in-out">
        <%= successMessage %>
    </div>
    <script>
        window.onload = function () {
            const popup = document.getElementById('popup-message');
            if (popup) {
                popup.classList.remove('opacity-0'); // Show the popup
                setTimeout(() => { popup.classList.add('opacity-0'); }, 3000); // Auto-hide after 3s
                popup.addEventListener('click', () => popup.classList.add('opacity-0')); // Hide on click
            }
        };
    </script>
  <% } %>

  <!-- Navbar -->
  <header class="bg-white shadow-md">
    <div class="container mx-auto flex items-center justify-between py-4 px-6">
      <div class="flex items-center space-x-2">
        <a href="/home">
          <!-- Clickable Logo -->
          <span class="text-xl font-semibold">êåÇ SpaceWise</span>
        </a>
      </div>
      <div class="flex items-center space-x-4">
        <a href="/home" class="text-gray-600 hover:text-black">Home</a>
        <a href="/institutions/2">
          <button class="px-4 py-2 text-sm text-white bg-purple-600 rounded hover:bg-purple-800">
            Institutions
          </button>
        </a>
        <a href="/reservations">
          <button class="px-4 py-2 text-sm text-white bg-purple-600 rounded hover:bg-purple-800">
            Reservations
          </button>
        </a>
        <form id="logout" action="/logout" method="POST">
          <button class="px-4 py-2 text-sm text-white bg-black rounded hover:bg-gray-800">
            Logout
          </button>
        </form>
      </div>
    </div>
  </header>

  <!-- Admin Content -->
  <main class="container mx-auto py-10 px-6">
    <div class="bg-white p-6 shadow-md rounded-lg">
      <h3 class="text-xl font-semibold mb-4">Admin Dashboard</h3>
      <p class="text-gray-600 text-sm mb-4">Welcome to the admin dashboard. Use the options below to manage the library spaces, reservations, and users.</p>

      <!-- Section for managing library spaces -->
      <div class="mb-6">
        <h4 class="text-lg font-semibold">Manage Spaces</h4>
        <a href="/institutions/2/spaces">
          <button class="px-4 py-2 text-sm text-white bg-black rounded hover:bg-gray-800">
            Add New Space
          </button>
        </a>  
        <a href="/institutions/3/spaces">
          <button class="px-4 py-2 text-sm text-white bg-black rounded hover:bg-gray-800">
            View Existing Spaces
          </button>
        </a>              
        <a href="/institutions/1/spaces/1/seats">
            <button class="px-4 py-2 text-sm text-white bg-black rounded hover:bg-gray-800">
              Create Space with Layout
            </button>
        </a>
        <!--Recommended for Co-Working Spaces-->
        <a href="/institutions/10/spaces">
            <button class="px-4 py-2 text-sm text-white bg-black rounded hover:bg-gray-800">
              Create a Space without a Layout
            </button>
        </a>
      </div>

      <!-- Section for managing reservations -->
      <div class="mb-6">
        <h4 class="text-lg font-semibold">Manage Reservations</h4>

        <a href="/reservations">
            <button class="px-4 py-2 text-sm text-white bg-black rounded hover:bg-gray-800">
              Reservations
            </button>
        </a>
      </div>

      <!-- Section for managing users -->
      <div class="mb-6">
        <h4 class="text-lg font-semibold">Admin Profile</h4>
        <a href="/institutions/8">
            <button class="px-4 py-2 text-sm text-white bg-black rounded hover:bg-gray-800">
              View Profile
            </button>
        </a>
      </div>
    </div>
  </main>
</body>
</html>
