<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Library Space Search - SpaceWise</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
    }
  </style>
</head>
<body class="bg-gray-100">
  <!-- Pop-up notification for login success message -->
  <% if (successMessage) { %>
    <div id="popup-message" class="fixed top-5 left-1/2 transform -translate-x-1/2 bg-green-500 text-white py-2 px-4 rounded-lg shadow-lg opacity-0 transition-opacity duration-300 ease-in-out">
        <%= successMessage %>
    </div>
    <script>
        window.onload = function () {
            const popup = document.getElementById('popup-message');
            if (popup) {
                popup.classList.remove('opacity-0'); // Show the popup
                setTimeout(() => { popup.classList.add('opacity-0'); }, 3000); // Auto-hide after 3s
                popup.addEventListener('click', () => popup.classList.add('opacity-0')); // Hide on click
            }
        };
    </script>
  <% } %>

  <!-- Navbar -->
  <header class="bg-white shadow-md">
    <div class="container mx-auto flex items-center justify-between py-4 px-6">
      <div class="flex items-center space-x-2">
        <a href="/home">
          <!-- Clickable Logo -->
          <span class="text-xl font-semibold">êåÇ SpaceWise</span>
        </a>
      </div>
      <div class="flex items-center space-x-4">
        <a href="/institutions">
          <button class="px-4 py-2 text-sm text-white bg-purple-600 rounded hover:bg-purple-800">
            Institutions
          </button>
        </a>
        <a href="/reservations">
          <button class="px-4 py-2 text-sm text-white bg-purple-600 rounded hover:bg-purple-800">
            Reservations
          </button>
        </a>
        <form id="logout" action="/logout" method="POST">
          <button class="px-4 py-2 text-sm text-white bg-black rounded hover:bg-gray-800">
            Logout
          </button>
        </form>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <main class="container mx-auto py-10 px-6">
    <!-- Library Space Search -->
    <div class="bg-white p-6 mb-6 shadow-md rounded-lg flex items-center">
      <div class="flex-shrink-0">
        <img src="https://via.placeholder.com/60x60" alt="Library Icon" class="w-12 h-12">
      </div>
      <div class="ml-4 flex-1">
        <h3 class="text-lg font-semibold">Library Space Search</h3>
        <p class="text-gray-600 text-sm">Search for available library spaces for individual study or group sessions. Find the perfect spot based on your needs.</p>
      </div>
      <div class="ml-4">
        <a href="/institutions">
          <button class="px-4 py-2 text-sm text-white bg-purple-600 rounded hover:bg-purple-800">
            View Spaces
          </button>
        </a>
      </div>
    </div>

    <!-- Reserve Co-working Space -->
    <div class="bg-white p-6 mb-6 shadow-md rounded-lg flex items-center">
      <div class="flex-shrink-0">
        <img src="https://via.placeholder.com/60x60" alt="Reservation Icon" class="w-12 h-12">
      </div>
      <div class="ml-4 flex-1">
        <h3 class="text-lg font-semibold">Co-Working Space Search</h3>
        <p class="text-gray-600 text-sm">Search for Co-working spaces and find places that fit your needs.</p>
      </div>
      <div class="ml-4">
        <a href="/institutions/1/spaces">
          <button class="px-4 py-2 text-sm text-white bg-purple-600 rounded hover:bg-purple-800">
            View Spaces
          </button>
        </a>
      </div>
    </div>

    <!-- My Reservations -->
    <div class="bg-white p-6 shadow-md rounded-lg flex items-center">
      <div class="flex-shrink-0">
        <img src="https://via.placeholder.com/60x60" alt="Availability Icon" class="w-12 h-12">
      </div>
      <div class="ml-4 flex-1">
        <h3 class="text-lg font-semibold">Manage Reservations</h3>
        <p class="text-gray-600 text-sm">Manage your reservations with easy access to cancel when done.</p>
      </div>
      <div class="ml-4">
        <a href="/reservations">
          <button class="px-4 py-2 text-sm text-white bg-purple-600 rounded hover:bg-purple-800">
            Reservations
          </button>
        </a>
      </div>
    </div>
  </main>
</body>
</html>
