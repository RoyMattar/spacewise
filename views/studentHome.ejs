<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Library Space Search - SpaceWise</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <link rel="icon" type="image/png" href="/favicon.png">
  <style>
    body {
      font-family: 'Inter', sans-serif;
    }
  </style>
</head>
<body class="bg-gray-100">
  <!-- Pop-up notification for login success message -->
  <% if (successMessage) { %>
    <div id="popup-message" class="fixed top-5 left-1/2 transform -translate-x-1/2 bg-green-500 text-white py-2 px-4 rounded-lg shadow-lg opacity-0 transition-opacity duration-300 ease-in-out">
        <%= successMessage %>
    </div>
    <script>
        window.onload = function () {
            const popup = document.getElementById('popup-message');
            if (popup) {
                popup.classList.remove('opacity-0'); // Show the popup
                setTimeout(() => { popup.classList.add('opacity-0'); }, 3000); // Auto-hide after 3s
                popup.addEventListener('click', () => popup.classList.add('opacity-0')); // Hide on click
            }
        };
    </script>
  <% } %>

  <!-- Student Navbar -->
  <%- include('partials/studentNavbar') %>

  <!-- Main Content -->
  <main class="container mx-auto py-10 px-6">
    <!-- Institution Search -->
    <div class="bg-white p-6 mb-6 shadow-md rounded-lg flex items-center">
      <div class="ml-4 flex-1">
        <h3 class="text-lg font-semibold mb-2">Select an Institution</h3>
        <p class="text-gray-600 text-sm">Select an institution available for individual study or group sessions, such as a library or a co-working space.</p>
        <p class="text-gray-600 text-sm">Find the perfect spot based on your needs.</p>
      </div>
      <div class="ml-4">
        <a href="/institutions">
          <button class="px-4 py-2 text-sm text-white bg-purple-600 rounded hover:bg-purple-800">
            View Institutions
          </button>
        </a>
      </div>
    </div>

    <!-- My Reservations -->
    <div class="bg-white p-6 shadow-md rounded-lg flex items-center">
      <div class="ml-4 flex-1">
        <h3 class="text-lg font-semibold mb-2">View Reservations</h3>
        <p class="text-gray-600 text-sm">See all your reservations with easy access and the ability to cancel.</p>
      </div>
      <div class="ml-4">
        <a href="/reservations">
          <button class="px-4 py-2 text-sm text-white bg-purple-600 rounded hover:bg-purple-800">
            View Reservations
          </button>
        </a>
      </div>
    </div>
  </main>
</body>
</html>
